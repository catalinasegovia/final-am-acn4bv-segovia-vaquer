<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity3">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="361dp"
        android:layout_height="91dp"
        android:text="Objetivo del juego: Obtener una mano de cartas que sume 21 puntos o lo más cercano posible sin pasarse del puntaje."
        android:textAlignment="viewStart"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="242dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="360dp"
        android:layout_height="145dp"
        android:text="Modo de juego: Recibirás dos cartas para acercarte a 21 puntos. La IA será tu contrincante y el que tenga la mejor mano sin pasarse gana.  Un &quot;Blackjack&quot; es un as y una carta cuyo valor es 10. ¡Buena suerte!"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="343dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black Jack"
        android:textColor="@color/purple_500"
        android:textSize="34sp"
        android:justificationMode="inter_word"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="141dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:text="INGRESAR"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="566dp" />
</androidx.constraintlayout.widget.ConstraintLayout>